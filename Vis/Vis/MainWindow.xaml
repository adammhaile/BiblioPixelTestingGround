<Window x:Class="Vis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vis"
        mc:Ignorable="d"
        Title="Vis" Height="500" Width="250" Loaded="Window_Loaded"
        SizeToContent="WidthAndHeight"
        Closing="Window_Closing"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <Label Margin="0">W</Label>
            <TextBox Width="40" Name="txtW" KeyUp="txtW_KeyUp"></TextBox>
            <Label Margin="0">H</Label>
            <TextBox Width="40" Name="txtH" KeyUp="txtH_KeyUp"></TextBox>
        </Menu>
        <Canvas Grid.Row="1" Name="cvs" HorizontalAlignment="Left" Height="470" VerticalAlignment="Top" Width="243"/>
    </Grid>
</Window>
